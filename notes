----- HTML to include for filtering tags
<!--Radio inputs to select filter - not shown!-->
<input type="radio" id="css-radio" class="radio-button" name="content-filter" checked="checked">
<input type="radio" id="cpp-radio" class="radio-button" name="content-filter">
<input type="radio" id="devops-radio" class="radio-button" name="content-filter">

<!--Filter buttons-->
<div id="blog-filter">
	<label for="css-radio" class="filter-label css">CSS</label>
	<label for="cpp-radio" class="filter-label cpp">C++</label>
	<label for="devops-radio" class="filter-label devops">DevOps</label>
</div>


----- CSS to include for filtering tags
.radio-button {
    display: none;
}

#blog-filter {
    padding: 5% 0;
    display: flex;
    justify-content: center;
	color: white;
}

.filter-label {
    padding: 10px 20px;
    font-size: 1.4em;
    text-align: center;
    cursor: pointer;
	flex-grow: 1;
}

.filter-label:hover {
	text-decoration: underline;
}

#css-radio:checked~#blog-filter .css,
#cpp-radio:checked~#blog-filter .cpp,
#devops-radio:checked~#blog-filter .devops {
    background-color: white;
	border: 2px solid;
	
}

#devops-radio:checked~main .devops,
#cpp-radio:checked~main .cpp,
#css-radio:checked~main .css {
    display: block;
}
